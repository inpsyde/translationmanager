<?xml version="1.0"?>
<ruleset name="Inpsyde Coding Standards Configuration">
    <!-- See https://github.com/inpsyde/Codex/tree/master/tools/CodeSniffer -->
    <!-- See https://github.com/squizlabs/PHP_CodeSniffer/wiki/Annotated-ruleset.xml -->

    <!-- Set a description for this ruleset. -->
    <description>Coding standards for the Eurotext WordPress Plugins.</description>

    <!-- Check for desired PHP version -->
    <config name="testVersion" value="5.3-7.1"/>
    <rule ref="PHPCompatibility" />

    <!-- Include the WordPress ruleset, with exclusions. -->
    <rule ref="WordPress.VIP">

        <!-- Discurage following VIP functions as long as this is not a VIP plugin. -->
        <exclude name="WordPress.VIP.RestrictedFunctions" />

        <!-- As long as this issue is open: -->
        <!-- https://github.com/WordPress-Coding-Standards/WordPress-Coding-Standards/issues/849 -->
        <exclude name="WordPress.VIP.ValidatedSanitizedInput.InputNotValidated" />
        <exclude name="WordPress.VIP.ValidatedSanitizedInput.InputNotSanitized" />
        <exclude name="WordPress.VIP.SuperGlobalInputUsage.AccessDetected" />

    </rule>
</ruleset>
