{
    "name": "eurotext/translationmanager",
    "description": "WordPress Plugin to connect to the Eurotext REST API.",
    "type": "wordpress-plugin",
    "license": "GPL-2.0-or-later",
    "config": {
        "sort-packages": true,
        "preferred-install": {
            "inpsyde/multilingualpress": "dist"
        }
    },
    "authors": [
        {
            "name": "Inpsyde GmbH",
            "email": "info@inpsyde.com",
            "homepage": "https://inpsyde.com/en/"
        }
    ],
    "repositories": [
        {
            "type": "composer",
            "url": "https://repo.packagist.com/inpsyde/"
        },
        { "packagist.org": false }
    ],
    "minimum-stability": "dev",
    "require": {
        "php": "^7.1",
        "ext-fileinfo": "*",
        "brain/nonces": "1.0.*",
        "inpsyde/system-status": "dev-master",
        "pimple/pimple": "^3.2",
        "webmozart/assert": "^1.4",
        "ext-simplexml": "*",
      "ext-zip": "*"
    },
    "require-dev": {
        "johnpbloch/wordpress-core": "^5.0",
        "barryvdh/composer-cleanup-plugin": "^0.3.0",
        "brain/monkey": "2.*",
        "inpsyde/php-coding-standards": "^1.0",
        "phpunit/phpunit": "^6.0 | ^7.0 | ^8.0 | ^9.0",
        "vimeo/psalm": "^3.11.7",
        "oomphinc/composer-installers-extender": "^2.0",
        "inpsyde/multilingualpress": "^3.0"
    },
    "autoload": {
        "psr-4": {
            "Translationmanager\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "TranslationmanagerTests\\": "tests/php",
            "TranslationmanagerTests\\Unit\\": "tests/php/unit/src",
            "TranslationmanagerTests\\Functional\\": "tests/php/Functional/src",
            "TranslationmanagerTests\\Integration\\": "tests/php/integration/src"
        }
    },
    "extra": {
        "installer-paths": {
            "vendor/{$vendor}/{$name}": ["type:wordpress-plugin"]
        }
    }
}
