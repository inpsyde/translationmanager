{
    "name": "eurotext/translationmanager",
    "description": "WordPress Plugin to connect to the Eurotext REST API.",
    "type": "wordpress-plugin",
    "license": "GPL-2.0-or-later",
    "config": {
        "sort-packages": true
    },
    "authors": [
        {
            "name": "Inpsyde GmbH",
            "email": "info@inpsyde.com",
            "homepage": "https://inpsyde.com/en/"
        }
    ],
    "repositories": [
        {
            "type": "composer",
            "url": "https://repo.packagist.com/inpsyde/"
        }
    ],
    "require": {
        "php": ">=5.6",
        "ext-fileinfo": "*",
        "brain/nonces": "1.0.*",
        "inpsyde/system-status": "dev-master",
        "pimple/pimple": "^3.2",
        "webmozart/assert": "^1.4"
    },
    "require-dev": {
        "phpunit/phpunit": "~5",
        "brain/monkey": "2.*",
        "inpsyde/php-coding-standards": "^0.13.3"
    },
    "autoload": {
        "psr-4": {
            "Translationmanager\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "TranslationmanagerTests\\": "tests/php",
            "TranslationmanagerTests\\Unit\\": "tests/php/unit/src",
            "TranslationmanagerTests\\Integration\\": "tests/php/Functional/src",
            "TranslationmanagerTests\\Integration\\": "tests/php/integration/src"
        }
    }
}
